<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="45sp" />

    <Button
        android:id="@+id/buttonMC"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView"
        android:layout_marginLeft="15dp"
        android:background="@android:color/darker_gray"
        android:text="MC"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonMPlus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/buttonMC"
        android:background="@android:color/darker_gray"
        android:text="M+"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonMMinus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/buttonMPlus"
        android:background="@android:color/darker_gray"
        android:text="M-"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonMR"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/buttonMMinus"
        android:background="@android:color/darker_gray"
        android:text="MR"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonC"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonMC"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"
        android:text="C"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonPlusMinus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonMPlus"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/buttonC"
        android:background="@android:color/darker_gray"
        android:text="+/-"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonDivide"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonMC"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/buttonPlusMinus"
        android:background="@android:color/darker_gray"
        android:text="/"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonMulti"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonMC"
        android:layout_margin="15dp"
        android:layout_toRightOf="@id/buttonDivide"
        android:background="@android:color/darker_gray"
        android:text="*"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonSeven"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonC"
        android:layout_margin="15dp"
        android:background="@android:color/darker_gray"
        android:text="7"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonEight"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonC"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/buttonSeven"
        android:background="@android:color/darker_gray"
        android:text="8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonNine"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonC"
        android:layout_margin="15dp"
        android:layout_toRightOf="@+id/buttonEight"
        android:background="@android:color/darker_gray"
        android:text="9"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonMinus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonC"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/buttonNine"
        android:background="@android:color/darker_gray"
        android:text="-"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonFour"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonSeven"
        android:layout_marginLeft="15dp"
        android:background="@android:color/darker_gray"
        android:text="4"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonFive"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonSeven"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/buttonFour"
        android:background="@android:color/darker_gray"
        android:text="5"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonSix"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonSeven"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/buttonFive"
        android:background="@android:color/darker_gray"
        android:text="6"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonPlus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonSeven"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/buttonSix"
        android:background="@android:color/darker_gray"
        android:text="+"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonOne"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonFour"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"
        android:text="1"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonTwo"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonFour"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/buttonOne"
        android:background="@android:color/darker_gray"
        android:text="2"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonThree"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonFour"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/buttonTwo"
        android:background="@android:color/darker_gray"
        android:text="3"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonEq"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="115dp"
        android:layout_below="@id/buttonFour"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/buttonThree"
        android:background="@android:color/darker_gray"
        android:text="="
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonZero"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonOne"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"
        android:text="0"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonDot"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonOne"
        android:layout_toRightOf="@+id/buttonZero"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"
        android:text="0"
        android:textSize="25sp" />

</RelativeLayout>